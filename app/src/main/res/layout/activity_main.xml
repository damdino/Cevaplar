<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context="com.example.asus.cevaplar.MainActivity">


    <EditText
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:hint="Adınız"
        android:inputType="textCapSentences|textAutoCorrect" />

    <EditText
        android:id="@+id/soyad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad"
        android:hint="Soyadınız"
        android:inputType="textCapSentences|textAutoCorrect" />

    <EditText
        android:id="@+id/yas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soyad"
        android:hint="Yasınız"
        android:inputType="number" />

    <EditText
        android:id="@+id/soru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yas"
        android:hint="Sorunuz"
        android:inputType="textCapSentences|textAutoCorrect|textLongMessage" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soru"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:onClick=""
        android:text="Yolla" />


</RelativeLayout>
